page {
    width: 100%;
    height: 100%;
}


#map {
    width: 100%;
    /* 填充剩余面板，默认0默认大小，1填充全部 */
    flex-grow: 1;
}


.container {
    height: 100%;
    /* 从下往上进行排版，先排面板，再排地图 */
    flex-direction: column-reverse;
    justify-content: start;
}



.box {
    display: flex;
    align-items: center;
    width: 525rpx;
    flex-direction: column;
    padding-bottom: 60rpx;
}

.time text {
    font-size: 68rpx;
}

.time .cuIcon-timefill {
    color: orange;
}

.time-driven {
    margin-left: 30rpx;
    font-weight: bold;
}

.cost {
    text-align: center;
}